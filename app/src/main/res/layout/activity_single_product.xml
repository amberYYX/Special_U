<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingleProductActivity"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="25dp">

<!--    <androidx.appcompat.widget.Toolbar-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="40dp"-->
<!--        android:background="#032d42">-->
<!--        <Button-->
<!--            android:id="@+id/single_back"-->
<!--            android:text="<"-->
<!--            android:layout_width="30dp"-->
<!--            android:layout_height="40dp"/>-->
<!--    </androidx.appcompat.widget.Toolbar>-->

    <Button
        android:id="@+id/single_back"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="back"
        android:textSize="14dp"
        android:gravity="center"
        android:layout_marginRight="140dp"/>

    <!-- Image -->
    <ImageView
        android:id="@+id/single_image"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:background="@drawable/ic_launcher_background"
        android:gravity="center_horizontal"
        android:layout_marginTop="28dp"/>

    <!-- Name & Price -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/single_name"
            android:layout_width="268dp"
            android:layout_height="48dp"
            android:text="Name"
            android:textSize="28dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/single_price"
            android:layout_width="68dp"
            android:layout_marginLeft="20dp"
            android:layout_height="48dp"
            android:text="Price"
            android:textSize="20dp"/>

    </LinearLayout>

    <!-- Description -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_marginTop="38dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:text="Let's pretend"
            android:textSize="18dp"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="This is description. What beautiful earings."
            android:textSize="16dp"
            android:gravity="center"/>
    </LinearLayout>


    <!-- ADD To BAD -->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_marginBottom="10dp"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/single_addToCart"
            android:layout_marginLeft="210dp"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="add to bag" />
    </LinearLayout>

</LinearLayout>